# System Control {{{1
"lock-screen"
  control + mod4 + q
"sudo shutdown -h 0"
  control + mod4 + Delete
"scrot -d 4"
  Print
# Commands {{{1
"google-chrome-stable --disable-session-crashed-bubble"
  mod4 + b
"thunar"
  mod4 + t
"search-courses"
  control + mod4 + f
# Brightness control {{{1
"xbacklight -inc 20"
   XF86MonBrightnessUp
"xbacklight -dec 20"
   XF86MonBrightnessDown
# Sound control {{{1
"amixer set \"Master\" toggle"
   control + mod4 + m
"amixer set \"Master\" 5%+"
   control + mod4 + k
"amixer set \"Master\" 5%-"
   control + mod4 + j
# MPD media keys {{{1
"mpc prev"
   control + mod4 + h
"mpc next"
   control + mod4 + l
"mpc toggle"
   control + mod4 + space
# Option + hjkl {{{1
"xdotool keyup alt+h && xdotool key Left && xdotool keydown alt"
   Alt + h
"xdotool keyup alt+j && xdotool key Down && xdotool keydown alt"
   Alt + j
"xdotool keyup alt+k && xdotool key Up && xdotool keydown alt"
   Alt + k
"xdotool keyup alt+l && xdotool key Right && xdotool keydown alt"
   Alt + l
# Option + i {{{1
"xsel | xvkbd -xsendevent -file -"
  Alt + i
